{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "es6",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
		"declarationMap": true,
    "outDir": "dist",
    "sourceMap": true,
		"noUnusedLocals": true,
    "noUnusedParameters": true,
		"preserveWatchOutput": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "docs"
  ]
}