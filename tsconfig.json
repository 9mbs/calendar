{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "docs"
  ]
}